print("🏪 Welcome to Vincent's Sport Store 🏪")
items = ["Badminton racket 🏸", "Baseball bat ⚾", "Hockey stick 🏒", "Basketball 🏀"]
prices = [60, 50, 70, 40]
total = 0
while True:
for item in items:
    print(str(number) + ". " + item)
    number += 1
    item = input("\nWhat do you want to buy?: ")
    how_many = int(input("How many do you want to buy?: "))
    unit_price = float(input("How much does it cost (per item)?: $"))
    cost = how_many * unit_price
    total = total + cost
    print("You bought " + str(how_many) + " " + item + "(s) for $" + str(cost))
